{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-execute",
    "dialog:default",
    "fs:default",
    "fs:allow-remove",
    "fs:allow-appdata-write",
    "fs:allow-appdata-write-recursive",
    "fs:allow-video-read",
    "fs:allow-video-read-recursive",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/ffmpeg",
          "cmd": "",
          "args": true,
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA",
        "$APPDATA/**",

        "$DESKTOP",
        "$DESKTOP/**",

        "$DOWNLOAD",
        "$DOWNLOAD/**",

        "$VIDEO",
        "$VIDEO/**",

        "$DOCUMENT",
        "$DOCUMENT/**"
      ]
    }
  ]
}
